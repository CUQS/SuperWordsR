<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity" android:background="#C7EDCC">

    <TextView
            android:text="1, 1, 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvMainEnvInfo" android:textSize="26sp"
            android:textAlignment="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="EASY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnMainEasy" android:layout_weight="1"/>
        <Button
                android:text="设置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnMain2Setting" android:layout_weight="1"/>
        <Button
                android:text="SAVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnMainSave"
                android:layout_weight="1"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="AIR"
                android:layout_width="70dp"
                android:layout_height="50dp" android:id="@+id/btnMainAir"
                app:layout_constraintTop_toBottomOf="@+id/tvMainHourly"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/btnMain2Game"/>
        <Button
                android:text="GAME"
                android:layout_width="70dp"
                android:layout_height="50dp" android:id="@+id/btnMain2Game"
                app:layout_constraintTop_toBottomOf="@+id/tvMainHourly"
                app:layout_constraintStart_toStartOf="@+id/tvMainWordDisplay" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="360dp" android:id="@+id/tvMainWordDisplay"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp" android:editable="true"/>
        <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp" app:srcCompat="@color/colorPrimary"
                android:id="@+id/imgPm"
                app:layout_constraintEnd_toEndOf="@+id/tvMainWordDisplay" android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/btnMainBack" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvMainWordDisplay"/>
        <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content" android:id="@+id/tvMainHourly"
                app:layout_constraintStart_toStartOf="@+id/btnMainBack"
                app:layout_constraintEnd_toEndOf="@+id/btnMainBack"
                app:layout_constraintTop_toBottomOf="@+id/btnMainBack"/>
        <Button
                android:text="START"
                android:layout_width="150dp"
                android:layout_height="50dp" android:id="@+id/btnMainNext"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@+id/tvMainWordDisplay"
                app:layout_constraintStart_toStartOf="@+id/tvMainWordDisplay" android:layout_marginStart="8dp"/>
        <Button
                android:text="FORGET"
                android:layout_width="150dp"
                android:layout_height="50dp" android:id="@+id/btnMainBack"
                app:layout_constraintTop_toBottomOf="@+id/btnMainNext"
                app:layout_constraintStart_toStartOf="@+id/tvMainWordDisplay" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>